def log_return(data:np.array):
    """
    Calculates log-returns for a given price series

    Parameters
    ----------
    data : np.array
        simple prices.

    Returns
    -------
    log_ret : np.array
        corresponding log-returns.

    """
    arr = data.values
    returns = np.log(arr[1:]) - np.log(arr[:-1])

    return returns
